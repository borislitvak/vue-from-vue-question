{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "listEmittedFiles": true,
    "listFiles": true,
    //"allowJs": true,
    "sourceMap": true 
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ],
  "compileOnSave": false
}
